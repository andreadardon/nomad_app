<p id="notice"><%= notice %></p>


<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3 centered">
		  <h1><%= @region.name %></h1>
		  <br>
	  </div>
	</div>


	
	<% @region.places.each do |p| %>
  <div class="row">

	  <div class="col-md-12 show-region">
	  	<div class="row">
	  		<div class="col-md-8 show-description">
			  	<%= p.name %> 
			  	<br>
					<%= truncate(p.description,:length => 140)  %>
				</div>
				<div class="col-md-2 col-md-offset-2">
					<div clas="flag-wrapper">
			  		<img src="/assets/flags/1x1/hr.svg" class="img-circle flag">
			  	</div>
			  </div>
			</div>
			<div class="row">
				<div class="col-md-3">
				<%= link_to "See More", p, :class => "btn btn-default" %>
				</div>
			</div>
	  </div>
	  
  </div>
  <br>
    	<% end %>
 </div>


<%= link_to 'Edit', edit_region_path(@region) %> |
<%= link_to 'Back', regions_path %>
